{
  "name": "@vivliostyle/cli",
  "description": "Save the pdf file via headless browser and Vivliostyle.",
  "version": "9.0.0-next.1",
  "author": "spring_raining <harusamex.com@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "yarn clean && run-s build:*",
    "build:cli": "tsc && shx chmod +x dist/cli.js",
    "build:docs": "node --loader ts-node/esm --no-warnings scripts/update-docs.ts",
    "generate:schema": "json2ts -i schemas/pub-manifest/publication.schema.json -o src/schema/publication.schema.ts --cwd schemas/pub-manifest",
    "clean": "shx rm -rf dist tmp",
    "dev": "tsc -w --preserveWatchOutput",
    "example": "yarn --cwd example build",
    "pretest": "playwright-core install chromium --no-shell",
    "release": "release-it",
    "release:pre": "release-it --preRelease --npm.tag=next",
    "test": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@babel/code-frame": "^7.24.7",
    "@humanwhocodes/momoa": "^3.2.1",
    "@napi-rs/canvas": "0.1.41",
    "@npmcli/arborist": "^6.1.3",
    "@vivliostyle/jsdom": "25.0.1-vivliostyle-cli.1",
    "@vivliostyle/vfm": "2.2.1",
    "@vivliostyle/viewer": "2.30.7",
    "ajv": "^8.11.2",
    "ajv-formats": "^2.1.1",
    "archiver": "^5.3.1",
    "bcp-47-match": "^2.0.3",
    "command-exists": "1.2.9",
    "commander": "^12.1.0",
    "debug": "^4.3.2",
    "decamelize": "5.0.0",
    "dompurify": "^3.1.2",
    "escape-string-regexp": "^5.0.0",
    "execa": "^9.5.2",
    "fast-xml-parser": "^4.2.4",
    "fs-extra": "^11.1.1",
    "github-slugger": "^2.0.0",
    "hast-util-to-html": "^9.0.1",
    "hastscript": "^9.0.0",
    "mime-types": "^2.1.32",
    "node-stream-zip": "^1.14.0",
    "pdf-lib": "^1.16.0",
    "playwright-core": "1.49.0",
    "press-ready": "^4.0.3",
    "prettier": "^3.3.3",
    "resolve-pkg": "^2.0.0",
    "sirv": "^3.0.0",
    "terminal-link": "^2.1.1",
    "tinyglobby": "^0.2.10",
    "tmp": "^0.2.1",
    "upath": "^2.0.1",
    "uuid": "^8.3.2",
    "valibot": "^0.42.1",
    "vfile": "^4.2.1",
    "vite": "6.0.3",
    "w3c-xmlserializer": "^4.0.0",
    "whatwg-mimetype": "^3.0.0",
    "yocto-spinner": "^0.1.2",
    "yoctocolors": "^2.1.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/adm-zip": "^0.5.5",
    "@types/archiver": "^5.3.2",
    "@types/babel__code-frame": "^7.0.6",
    "@types/command-exists": "1.2.0",
    "@types/connect": "^3.4.38",
    "@types/debug": "^4.1.7",
    "@types/dompurify": "^3.0.5",
    "@types/fs-extra": "^11.0.1",
    "@types/jsdom": "^21.1.1",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^22.5.4",
    "@types/npm-package-arg": "^6.1.1",
    "@types/npmcli__arborist": "^5.6.0",
    "@types/picomatch": "^3.0.1",
    "@types/tmp": "^0.2.1",
    "@types/uuid": "^8.3.1",
    "@types/w3c-xmlserializer": "^2.0.2",
    "@types/whatwg-mimetype": "^3.0.0",
    "@vitest/coverage-v8": "^2.0.5",
    "adm-zip": "^0.5.10",
    "file-type": "^16.5.3",
    "husky": "^9.1.6",
    "json-schema-to-typescript": "^15.0.2",
    "memfs": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "pretty-quick": "^4.0.0",
    "release-it": "^15.6.0",
    "shx": "^0.3.3",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.7",
    "typedoc-plugin-markdown": "^4.2.9",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/*": "./schemas/*",
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "bin": {
    "vivliostyle": "dist/cli.js",
    "vs": "dist/cli.js"
  },
  "files": [
    "dist",
    "schemas",
    "types"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/vivliostyle/vivliostyle-cli.git",
  "bugs": "https://github.com/vivliostyle/vivliostyle-cli/issues",
  "homepage": "https://github.com/vivliostyle/vivliostyle-cli",
  "keywords": [
    "vivliostyle"
  ],
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=16"
  }
}
